<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkest"
    android:orientation="vertical"
    tools:context=".vistas.HomeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/titleacerca"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Acerca de..."
            android:textSize="34sp"
            android:layout_margin="16dp"
            android:textColor="#ffff"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleacerca">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/icon" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="BW4Ever"
                android:fontFamily="@font/marvel_bold"
                android:textFontWeight="2000"
                android:textColor="#000000"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:text="Versión 3.0"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/version"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:text="www.bw4ever.org"
                android:textColor="#000000"
                android:textSize="22sp" />

            <View
                android:id="@+id/separador1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/web"
                android:background="@color/colorAccent"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/desarrolladores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separador1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Desarrolladores:"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/n1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desarrolladores"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:text="Rodolfo Campos"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/n2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/n1"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:text="Rubén Contreras"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/n3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/n2"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:text="Javier Rodríguez"
                android:textColor="#000000"
                android:textSize="24sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>